copyright = "1998";
copyright_gpl;

owner          = "Bruce Korb";
prog_name      = "getdefs";
prog_title     = "Autogen Definition Extraction Tool";
argument       = "<def-file> [ ... ]";
long_opts;

version = "0.1";

flag = {
    name      = defs_to_get;
    flag_arg  = ":";
    descrip   = 'Regexp to look for after the "/*="';
};

flag = {
    name      = "autogen";
    flag_arg;
    disable   = "no";
    enabled;
    descrip   = "Invoke autogen with defs";
};

flag = {
    name      = template;
    flag_arg  = ":";
    descrip   = "Template Name";
};

flag = {
    name      = templ_dirs;
    flag_arg  = ":";
    descrip   = "Template search directory list";
    setable;
};

flag = {
    name      = base_name;
    flag_arg  = ":";
    descrip   = "Base name for output file(s)";
};

flag = {
    name      = include;
    flag_arg  = ":";
    descrip   = "File to copy to output defs";
};

flag = {
    name      = assign;
    flag_arg  = ":";
    max       = NOLIMIT;
    stack_arg;
    descrip   = "Global assignment for output defs";
};

flag = {
    name      = block;
    flag_arg  = ":";
    max       = NOLIMIT;
    stack_arg;
    descrip   = "Block macro for output";
};

flag = {
    name      = ordering;
    flag_arg;
    disable   = no;
    descrip   = "Alphabatize or use named file";
};
