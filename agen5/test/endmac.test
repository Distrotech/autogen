# endmac.test --- test variations on the end macro marker
#
# Author:            Bruce Korb <autogen@linuxbox.com>
# Maintainer:        Bruce Korb <autogen@linuxbox.com>
# Created:           Fri Oct 1 10:27:29 PDT 1999
# Last Modified:     Fri Oct  1 11:17:56 1999				      
#            by:     Bruce Korb <autogen@linuxbox.com>			      
#
# $Id: endmac.test,v 1.2 1999/10/28 03:36:28 bruce Exp $
# ----------------------------------------------------------------------


cat > $testname.tpl <<EOF
<=autogen template test=>>
<=`pwd`=>>
<=# comment this test fails because the '=' is bound to 'test' >>
This is a test
EOF

$AUTOGEN -T$testname --no-def 2> /dev/null && exit 1
echo failure $testname test succeeded

cat > $testname.tpl <<EOF
<=autogen template test =>>
<=`echo print this message` =>>
<=# comment This test succeeds because the '=' is not part of 'test' =>>
This is a test
EOF

$AUTOGEN -T$testname --no-def || exit 1
echo first successful $testname test succeeded

cat > $testname.tpl <<EOF
<+autogen template test+>>
<+(define foo "print this message")  (. foo) +>>
<+# comment The '+' is not joined because it is neither '=' nor
            a legal file name character +>>
This is a test
EOF

$AUTOGEN -T$testname --no-def || exit 1
echo second successful $testname test succeeded

# end of endmac.test
