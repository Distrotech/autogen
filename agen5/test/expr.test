. ./defs
PS4='>expr> '

# # # # # # # TEMPLATE & DEFINITIONS FILES # # # # # # # # #
#
#  We construct this by pulling down the sources from the
#  AutoGen source directory.  We will also copy out the same
#  commands as are used there.  ${top_srcdir} is a full path.
mkdir ${testname}.d
cp ${top_srcdir}/agen5/snarf.tpl ${top_srcdir}/agen5/exp*.c \
   ${top_srcdir}/agen5/func*.c ${testname}.d/.
f=`fgrep '#ifdef DEBUG_ENABLED' ${top_srcdir}/agen5/expr.ini`
test -n "$f" && {
    DEBUG_ENABLED=true
    export DEBUG_ENABLED
}

exec 3> ${testname}.d/${testname}.sh
cat  >&3 <<- _EOF_
	GDexe=${GDexe}
	CLexe=${CLexe}
	export GDexe CLexe
	_EOF_

if ${VERBOSE}
then
    cat  >&3 <<- _EOF_
	run_ag()
	{
	    tfile=ag-\${1}-$$.log
	    tag="-MF${testname}-stamp-\${1} --trace=every --trace-out=\${tfile}"
	    shift
	    ${AGexe} \${tag} "\$@"
	}
	_EOF_
else
    cat  >&3 <<- _EOF_
	run_ag()
	{
	    tag="-MF${testname}-stamp-\${1}"
	    shift
	    echo ${AGexe} "\$@"
	    ${AGexe} \${tag} "\$@"
	}
	_EOF_
fi

sed -n '/^make_exprini()/,/^[}]/p' \
    ${top_srcdir}/agen5/bootstrap.dir | \
      sed '1,/local PS4=/d;/^[}]$/d' >&3
exec 3>&-

#  Remove the lines that *will* be different, always...
#
( 
 cd ${testname}.d ; srcdir=. PS4=">${testname}-x> " \
    ${SHELL} -x ./${testname}.sh )
sed '/DO NOT EDIT/,/and the template/d' ${testname}.d/expr.ini > expr.res
sed '/DO NOT EDIT/,/and the template/d' ${top_srcdir}/agen5/expr.ini \
    > expr.base

test -s expr.res || \
  failure "${testname} test produced no output"

cmp expr.base expr.res || \
  failure "`diff -c expr.base expr.res`"

cleanup

