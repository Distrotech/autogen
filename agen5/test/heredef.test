# Common definitions
if test -z "$srcdir"; then
    srcdir=`dirname $0`
    test "${VERBOSE+set}" != set && VERBOSE=1
fi
. $srcdir/defs

# # # # # # # # # # TEMPLATE FILE # # # # # # # # #

cat > ${testname}.tpl <<'_EOF_'
<= AutoGen5 template test =>
<=

(if (not (= (get "string1") (get "string2")))
    (error (sprintf "`%s' <> `%s'"
                    (get "string1") (get "string2") ))  )

=><=

(if (not (= (get "string2") (get "string3")))
    (error (sprintf "`%s' <> `%s'"
                    (get "string1") (get "string2") ))  )
=>OKAY:  <= (c-string (get "string3")) =>
FROM:  string1 extracted <= (def-file-line "string1") =>
       string2 extracted
<=  (def-file-line "string2" c-file-line-fmt) =>
       string3 extracted <=
(def-file-line "string3" "From %1$s on line %2$d") =>
_EOF_

# # # # # # # # # # SAMPLE FILE # # # # # # # # #
cat > ${testname}.sample <<\_EOF_
OKAY:  "\"`Testing'"
FROM:  string1 extracted from heredef.def line 3
       string2 extracted
#line 7 "heredef.def"

       string3 extracted From heredef.def on line 11
_EOF_

# # # # # # # # # # DEFINITIONS FILE # # # # # # # # #

# Create the files we need in the test environment
echo "AutoGen definitions ${testname};" > ${testname}.def
cat >> ${testname}.def <<\_EOF_

string1 = <<- AG_EOF
	"`Testing'
	AG_EOF;

string2 = <<- AG_EOF
"`Testing'
AG_EOF;

string3 = "\"`Testing'";

_EOF_

${AGexe} ${testname}.def || failure ${testname} AutoGen failed

if cmp ${testname}.test ${testname}.sample
then cleanup
else failure "`diff ${testname}.sample ${testname}.test`"
fi

# end of heredef.test
