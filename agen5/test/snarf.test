 *  write to:  The Free Software Foundation, Inc.,
 *             59 Temple Place - Suite 330,
 *             Boston,  MA  02111-1307, USA.
 *
 *  Guile Implementation Routines - for the test group
 */
#ifndef GUILE_PROCS_SNARF_H_GUARD
#define GUILE_PROCS_SNARF_H_GUARD
#include <guile/gh.h>

typedef enum {
    GH_TYPE_UNDEFINED = 0,
    GH_TYPE_BOOLEAN,
    GH_TYPE_SYMBOL,
    GH_TYPE_CHAR,
    GH_TYPE_VECTOR,
    GH_TYPE_PAIR,
    GH_TYPE_NUMBER,
    GH_TYPE_STRING,
    GH_TYPE_PROCEDURE,
    GH_TYPE_LIST,
    GH_TYPE_INEXACT,
    GH_TYPE_EXACT
} teGuileType;

teGuileType gh_type_e( SCM );

extern SCM test_scm_test_to_example_x( SCM );
extern SCM test_scm_sym_bumble_it;

