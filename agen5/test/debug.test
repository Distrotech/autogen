  list -> <=
  FOR val ", " =><= DEBUG bucket 128 => val[<=(for-index)=>]=<=val=><=
  ENDFOR =><=
ENDFOR =>
_EOF_

# # # # # # # # # # DEFINITIONS FILE # # # # # # # # #

