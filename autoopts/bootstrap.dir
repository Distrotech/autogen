#! /bin/sh

AUTOGEN=${AUTOGEN-autogen}

case "$1" in
*genshell.c )
  #  We were probably invoked by make
  #
  set -e
  ${AUTOGEN} -L. genshell.def
  ;;

* )
  #  This is likely a bootstrap.  Don't build if it exists
  #
  if [ ! -f genshell.c ]
  then
    ${AUTOGEN} -L. genshell.def
  fi
  ;;
esac

