cfg = {
   c-name   = datadir;
   c-val    = '@datadir@';
   c-desc   = <<- _EOF_
	The directory for various data directories.
	_EOF_;
};

cfg = {
   c-name   = package;
   c-val    = '@PACKAGE@';
   c-desc   = <<- _EOF_
