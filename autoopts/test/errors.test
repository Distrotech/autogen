#! /bin/sh
#  -*- Mode: Shell-script -*-
# ----------------------------------------------------------------------
# errors.test ---  test argument program attribute
#                    make sure that when it is not specified
#                    then option processing consumes all args.
#
# Author:            Bruce Korb <bkorb@gnu.org>
# Maintainer:        Bruce Korb <bkorb@gnu.org>
# Created:           Fri Oct 1 10:27:31 PDT 1999
# Last Modified:     Fri Oct  1 10:27:21 1999				      
#            by:     Bruce Korb <bkorb@gnu.org>			      
#
# $Id: errors.test,v 3.0 2001/12/09 19:44:06 bkorb Exp $
# ----------------------------------------------------------------------

# Common definitions
if test -z "$srcdir"; then
    srcdir=`echo "$0" | sed 's,[^/]*$,,'`
    test -z "$srcdir" && srcdir=.
    test "$srcdir" = "$0" && srcdir=.
    test "${VERBOSE+set}" != set && VERBOSE=1
fi
. $srcdir/defs

# # # # # # # # # # DEFINITIONS FILE # # # # # # # # #

echo "creating $testname.def in `pwd`"

testname="$testname" \
test_main="${test_main}" \
argument="arg ..." \
long_opts="yes" \
${SHELL-sh} -x ${stdopts} option second

echo $AGEN $testname.def
$AGEN $testname.def || \
  failure AutoGen could not process

set -x
compile "--help"

# # # # # # # # # # HELP OUTPUT FILE # # # # # # # # #

echo creating $testname.hlp
cat > $testname.hlp <<'_EOF_'
test_errors - Test AutoOpts for errors
USAGE:  errors [ -<flag> | --<name> ]... arg ...
  Flg Arg Option-Name    Description
   -o no  option         The option option descrip
   -s no  second         The second option descrip
   -? no  help           Display usage information and exit
   -! no  more-help      Extended usage information passed thru pager

Options may be specified by doubled hyphens and their name
or by a single hyphen and the flag character (option value).
_EOF_

cmp -s $testname.h*lp || \
  failure help output mismatch

./$testname -s -o -s 2> /dev/null && \
  failure $testname should not accept multiple options

./$testname -o -s > /dev/null 2>&1 && \
  failure $testname must have arguments

./$testname -o -s mumble > /dev/null || \
  failure $testname stumbled somehow

# # # # # # # # # # DEFINITIONS FILE # # # # # # # # #

echo "allow_errors;" >> $testname.def

echo $AGEN $testname.def
$AGEN $testname.def || \
  failure AutoGen could not process

compile "--help"

cmp -s $testname.h*lp || \
  failure help output mismatch

#  This time, having a duplicate should be ignored...
#
./$testname -s -o -s 2> /dev/null 1>&2 || \
  failure $testname should not object to multiple options

cleanup
# end of errors.test
