# Common definitions
if test -z "$srcdir"; then
    srcdir=`echo "$0" | sed 's,[^/]*$,,'`
    test -z "$srcdir" && srcdir=.
    test "$srcdir" = "$0" && srcdir=.
    test "${VERBOSE+set}" != set && VERBOSE=1
fi
. $srcdir/defs
set -x

# # # # # # # # # # DEFINITIONS FILE # # # # # # # # #

echo "creating ${testname}.def in `pwd`"
testname="${testname}" test_main="YES" \
argument="${argument}" long_opts="YES" \
${SHELL-sh} ${stdopts} option:'opt init' second=020

echo 'export = "extern char* gettext( const char* );";' >> ${testname}.def

echo $AGEN ${testname}.def
CFLAGS="${CFLAGS} -I${top_builddir}/autoopts"
lib=`cd ${top_builddir}/autoopts > /dev/null ; pwd`
lib=`cd ${top_builddir}/autoopts > /dev/null
if [ -f .libs/libopts.a ]
then echo $lib/.libs/libopts.a
else echo $lib/libopts.a
fi`

LDFLAGS="${LDFLAGS} ${lib}"
$AGEN ${testname}.def || \
  failure AutoGen could not process

chmod u+w ${testname}.[ch]
CFLAGS="${CFLAGS} -DENABLE_NLS=1"
cat >> ${testname}.c <<'_EOF_'

char*
gettext( const char* pzS )
{
    static char z[ 4096 ];
    char* pzD = z + sizeof(z)-1;
    if (pzS == NULL)
        return NULL;
    if (strchr(pzS, '%') != NULL)
        return (void *)pzS;
    *--pzD = '\0';
    while ((*--pzD = *pzS++), *pzS)  ;
    if (*pzD == '\n') {
        pzD++;
        strcpy( z + sizeof(z) - 2, "\n" );
    }
    return pzD;
}
_EOF_

compile "--pleh"

# # # # # # # # # # HELP OUTPUT FILE # # # # # # # # #

echo creating ${testname}.hlp
cat > ${testname}.hlp <<'_EOF_'
test_nls - Test AutoOpts for nls
USAGE:  nls [ -<flag> [<val>] | --<name>[{=| }<val>] ]...
noitpircseD    emaN-noitpO grA glF  
   -o rtS noitpo         pircsed noitpo noitpo ehT
   -s muN dnoces         pircsed noitpo dnoces ehT
   -?  on pleh           tixe dna noitamrofni egasu yalpsiD
   -!  on pleh-erom      regap urht dessap noitamrofni egasu dednetxE

.retcarahc galf eht dna nehpyh elgnis a yb ro
eman rieht dna snehpyh delbuod yb deificeps era snoitpO
_EOF_

cmp -s ${testname}.help ${testname}.hlp || { set +x ; \
  failure "`diff -c ${testname}.hlp ${testname}.help`" ; }

cleanup
# end of nls.test
